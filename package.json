{
  "name": "f1-picks",
  "version": "0.1.0",
  "description": "F1 prediction game with real-time scoring",
  "private": true,
  "workspaces": [
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && black --check . && isort --check-only . && mypy .",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && npm run lint -- --fix",
    "format:backend": "cd backend && black . && isort .",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && pytest",
    "install:backend": "cd backend && pip install -r requirements.txt -r dev-requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
