{
  "name": "f1-picks",
  "version": "0.1.0",
  "description": "F1 prediction game with scoring",
  "private": true,
  "workspaces": [
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=frontend\" \"npm run dev:backend\"",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build --workspace=shared && npm run build --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "lint:backend": "cd backend && ruff check .",
    "format:backend": "cd backend && ruff check --fix . && ruff format ."
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
