# =============================================================================
# Backend Environment Configuration
# Copy this file to .env and fill in your actual values
# =============================================================================

# Database Configuration
# For local development (Supabase local):
DATABASE_URL=postgresql+asyncpg://postgres:postgres@127.0.0.1:54322/postgres

# For production (Supabase cloud):
# DATABASE_URL=postgresql+asyncpg://postgres.[project-ref]:[password]@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# Database settings
DATABASE_ECHO=false

# Supabase Configuration
# Get these from: https://app.supabase.com > Project Settings > API
# For local development (when using `supabase start`):
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# For production:
# SUPABASE_URL=https://[project-ref].supabase.co
# SUPABASE_ANON_KEY=your-production-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key (NEVER expose to frontend!)
# SUPABASE_JWT_SECRET=your-production-jwt-secret (from Settings > API > JWT Secret)

# FastAPI Configuration
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
# Add additional allowed origins (comma-separated)
ADDITIONAL_CORS_ORIGINS=

# FastF1 Configuration (for worker service)
FASTF1_CACHE_DIR=./cache/fastf1
