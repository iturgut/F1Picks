# =============================================================================
# FastF1 Worker Environment Configuration (Example)
# Copy this to .env and update with your values
# =============================================================================

# Database Configuration
# Get from: Supabase Dashboard → Settings → Database → Connection string
# Use Session mode (port 6543) for long-running connections
DATABASE_URL=postgresql+asyncpg://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@[HOST]:6543/postgres

# FastF1 Configuration
FASTF1_CACHE_DIR=./cache/fastf1
FASTF1_REQUEST_TIMEOUT=30
FASTF1_MAX_RETRIES=3

# Polling Configuration
# How often to check for new race results (in minutes)
POLL_INTERVAL_MINUTES=30
# Wait time after session ends before polling (in minutes)
POST_SESSION_DELAY_MINUTES=30
# Maximum polling attempts per session
MAX_POLL_ATTEMPTS=10

# Logging
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Options: json, console
LOG_FORMAT=console

# Worker Configuration
WORKER_NAME=fastf1-worker
# Enable/disable automatic polling scheduler
ENABLE_SCHEDULER=true

# Backend API Configuration
# URL of the FastAPI backend for triggering scoring
BACKEND_API_URL=http://localhost:8000
